<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="15sp"
        app:cardUseCompatPadding="true"
        android:layout_height="match_parent"
        app:cardCornerRadius="15sp"
        android:id="@+id/newscard">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/news_relative_india"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10sp"
                android:id="@+id/news_image_india"
                android:src="@drawable/ic_launcher_foreground"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author   "
                    android:padding="10sp"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:padding="10sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/news_author_india"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="10sp"
                android:id="@+id/news_title_india"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/news_description_india"
                android:layout_marginTop="5sp"
                android:textSize="20sp"
                android:padding="10sp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Published At:-"
                    android:padding="5sp"
                    android:textSize="20sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="5sp"
                    android:id="@+id/news_pub_india" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click For More Information"
                    android:textSize="20sp"
                    android:textStyle="italic|bold"
                    android:padding="10sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dowarrow"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5sp"
                android:textSize="20sp"
                android:padding="5sp"
                android:textStyle="italic"
                android:layout_marginBottom="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/news_content_india" />
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                android:layout_gravity="center"
                ads:adUnitId="ca-app-pub-1951128652454740/4460305134">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>